<div class="container" >
	<div class="col-lg-12">
	<h2>購入履歴</h2>
		<table class="table table-hover">
			<tr>
			<th>Image</th>
			<th>name</th>
			<th>price</th>
			</tr>
		<% @sold_items.each do |sold_item| %>
			<tr>
			<td><%= attachment_image_tag sold_item.cd, :image, :fill, 50, 50, format: 'jpeg' %></td>
			<td><%= sold_item.cd.jacket_name %></td>
			<td><%= sold_item.price %></td>
			</tr>
		<% end %>
		</table>
	</div>
</div>